<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Burgers to Eat</h2>
            <ol>
                {{#each burger}}
                {{#unless this.devoured}}
                <li> {{this.burger_name}}
                    <button class="devourBtn" data-id="{{id}}">devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>

        <div class="col-md-6">
            <h2>Devoured Burgers</h2>
            <ol>
                {{#each burger}}
                {{#if this.devoured}}
                <li>{{this.burger_name}}
                    <button class="deleteBtn" data-id="{{this.id}}">delete</button>
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <input id="userBurger" type="text">
            <button id="burgerBtn">Order Burger</button>
        </div>
    </div>


</div>